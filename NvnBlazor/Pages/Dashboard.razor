@page "/dashboard"
@using NvnBlazor.Components.Weather
@using NvnBlazor.Component

<button type="button" class="btn btn-primary" onclick="@Increment" >Primary</button>

<button type="button" class=@btnColor   onclick="@ChangeColor">Secondary</button>

<p>@TestInt</p>

<div class="d-flex justify-content-between flex-row">
    <div class="p-2"> <Weather /> </div>
    <div class="p-2"> <hr /> </div>
    <div class="p-2"> <BasicInfo /> </div>
</div>


@functions
{
        string btnColor = "btn btn-primary";



        private void ChangeColor()
        {
            if(btnColor=="btn btn-primary")
            {
                btnColor = "btn btn-danger";
            }
            else
            {
             btnColor = "btn btn-primary";
            }
        }

    public int TestInt { get; set; } = 0;


    private void Increment()
    {

        TestInt++;
    }


}


